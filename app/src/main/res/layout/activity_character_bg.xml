<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CharacterBGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearlay">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/character_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/character_home_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5sp"
                android:text="Race"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/character_home_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/characterLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/titlerow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <TextView
                android:id="@+id/bgTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="10sp"
                android:text="Background"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:fontFamily="@font/balladehf" />

        </LinearLayout>
        <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linear02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/background"
            android:textSize="24sp"
            app:fontFamily="@font/balladehf" />

        <ImageButton
            android:id="@+id/imageButton05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear01">

        <TextView
            android:id="@+id/bgtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="One small step for man, one big yeet for mankind"
            android:textSize="18sp"
            app:fontFamily="@font/balladehf" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="24sp"
                android:text="Alignment"
                app:fontFamily="@font/balladehf" />

            <ImageButton
                android:id="@+id/imageButton22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear03">

            <TextView
                android:id="@+id/aligntext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="neutral good"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linear12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Personality Traits"
                android:textSize="24sp"
                app:fontFamily="@font/balladehf" />

            <ImageButton
                android:id="@+id/imageButton01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear04">

        <ListView
            android:id="@+id/persview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/balladehf"
            android:textSize="18sp">
        </ListView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear05">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="24sp"
            android:text="Bonds"
            app:fontFamily="@font/balladehf" />

        <ImageButton
            android:id="@+id/imageButton02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear06">

        <TextView
            android:id="@+id/bondstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="jeff"
            android:textSize="18sp"
            app:fontFamily="@font/balladehf" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear07">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="left"
            android:text="Flaws"
            app:fontFamily="@font/balladehf" />

        <ImageButton
            android:id="@+id/imageButton03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear08">

        <TextView
            android:id="@+id/flawstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="allergic to nuts"
            android:textSize="18sp"
            app:fontFamily="@font/balladehf" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear09">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="24sp"
            android:text="Ideals"
            app:fontFamily="@font/balladehf" />

        <ImageButton
            android:id="@+id/imageButton04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linear10">

        <TextView
            android:id="@+id/idealstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="a functioning dnd character sheet app that has more than a week of development time"
            android:textSize="18sp"
            app:fontFamily="@font/balladehf" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:baselineAligned="false"
        android:gravity="bottom|end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearlay">

        <ImageButton
            android:id="@+id/toAttacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:onClick="showAttacks"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/attacks" />

        <ImageButton
            android:id="@+id/toStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:onClick="showStats"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/stats" />

        <ImageButton
            android:id="@+id/toBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/background" />

        <ImageButton
            android:id="@+id/toInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/inventory" />

        <ImageButton
            android:id="@+id/toNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/notes" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>