<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CharacterBGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character_bg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/character_bg_race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="5sp"
                    android:text="Race"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/character_bg_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/character_bg_Level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:fontFamily="@font/balladehf" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titlerow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/header">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:background="@color/colorPrimary"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/bgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="Background"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:fontFamily="@font/balladehf" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:padding="5sp"
                        app:layout_constraintBottom_toTopOf="@+id/linear02">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/background"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear01">

                        <TextView
                            android:id="@+id/character_bg_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="left"
                            android:gravity="left"
                            android:text="One small step for man, one big yeet for mankind"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear02">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Alignment"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear03">

                        <TextView
                            android:id="@+id/character_bg_alignment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="neutral good"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear12">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Personality Traits"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linear04">

                        <TextView
                            android:id="@+id/character_bg_traits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linear05">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Features"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear15">

                        <TextView
                            android:id="@+id/character_bg_features"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="have those"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear16">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Bonds"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear07"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linear06">

                        <TextView
                            android:id="@+id/character_bg_bonds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="jeff"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear08"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear07">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Flaws"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear09"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear08">

                        <TextView
                            android:id="@+id/character_bg_flaws"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="allergic to nuts"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear09">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Ideals"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear10">

                        <TextView
                            android:id="@+id/character_bg_ideals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="a functioning dnd character sheet app that has more than a week of development time"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear11">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Languages"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:fontFamily="@font/balladehf" />

                        <ImageButton
                            android:id="@+id/imageButton13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/edit" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/linear13">

                        <TextView
                            android:id="@+id/character_bg_languages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Common"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/balladehf" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/colorPrimaryDark"
            android:baselineAligned="false"
            android:gravity="bottom|end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/linearlay">

            <ImageButton
                android:id="@+id/toAttacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="showAttacks"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/attacks" />

            <ImageButton
                android:id="@+id/toStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="showStats"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/stats" />

            <ImageButton
                android:id="@+id/toBG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1"
                android:tint="@color/white"
                app:srcCompat="@drawable/background" />

            <ImageButton
                android:id="@+id/toInv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="showInventory"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/inventory" />

            <ImageButton
                android:id="@+id/toNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="showNotes"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:scaleType="fitCenter"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/notes" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>