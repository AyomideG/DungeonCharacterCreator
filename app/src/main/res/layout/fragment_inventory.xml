<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Views.InventoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please select all that applies from the list below to add the items to your inventory."
                android:textColor="@color/colorSecondaryDark"
                android:textSize="15dp"
                app:fontFamily="@font/livingst" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ExpandableListView
                android:id="@+id/inventory"
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="25dp"
                app:fontFamily="@font/balladehf"></ExpandableListView>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>

