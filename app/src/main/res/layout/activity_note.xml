<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.NoteActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/character_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/character_home_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5sp"
                android:text="Race"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/character_home_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <TextView
                android:id="@+id/character_home_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Level"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontFamily="@font/balladehf" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/edit" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/backContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10sp"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:fontFamily="@font/balladehf"
                />

        </LinearLayout>
        <ExpandableListView
            android:id="@+id/explistNotes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" >

        </ExpandableListView>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/toAttacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="showAttacks"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            android:tint="@color/black"
            app:srcCompat="@drawable/attacks" />

        <ImageButton
            android:id="@+id/toStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="showStats"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/stats" />

        <ImageButton
            android:id="@+id/toBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="showBackground"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/background" />

        <ImageButton
            android:id="@+id/toInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="showInventory"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/inventory" />

        <ImageButton
            android:id="@+id/toNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:paddingTop="25sp"
            android:paddingBottom="25sp"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/notes"
            android:tint="@color/white"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>