<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SpellcastingAttacksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:gravity="top|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@drawable/border"
            android:gravity="top|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30sp">

                <TextView
                    android:id="@+id/player_ability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/ability_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ability"
                    android:textColor="@color/black"
                    app:fontFamily="@font/balladehf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40sp"
                android:paddingRight="40sp">

                <TextView
                    android:id="@+id/abilityModifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+2"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/ability_modifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifier"
                    android:textColor="@color/black"
                    app:fontFamily="@font/balladehf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="30sp">

                <TextView
                    android:id="@+id/ability_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+4"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:fontFamily="@font/balladehf" />

                <TextView
                    android:id="@+id/ability_save_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/black"
                    app:fontFamily="@font/balladehf" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/proficiencies_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>