<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yeet.dungeonsomething.dungeoncharactercreator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.CharacterHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.CHARACTER_HOME" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.AttacksActivity"></activity>
        <activity android:name=".Views.StatsActivity"></activity>
        <activity android:name=".Views.WizardTabsActivity"></activity>
        <activity android:name=".Views.CharacterBGActivity"></activity>
        <activity android:name=".Views.NoteActivity"></activity>
        <activity android:name=".Views.CharacterInventoryActivity"></activity>
    </application>

</manifest>